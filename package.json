{
  "name": "tg-chatbot",
  "version": "2.0.0",
  "description": "Platform-agnostic modular chatbot with AI and trading features",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:ts": "tsx index.ts",
    "dev": "tsx watch index.ts",
    "dev:js": "nodemon dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "test": "tsx test-runner.ts",
    "test:all": "tsx test-runner.ts",
    "test:unit": "tsx test-runner.ts unit",
    "test:integration": "tsx test-runner.ts integration",
    "test:e2e": "tsx test-runner.ts e2e",
    "test:position": "tsx tests/integration/position-integration.test.ts",
    "test:userservice": "tsx tests/unit/services/userService.test.ts",
    "test:formatter": "tsx tests/unit/utils/formatter.test.ts",
    "test:trading": "tsx tests/integration/trading-module.test.ts",
    "test:bot": "tsx tests/e2e/telegram-bot.test.ts",
    "type-check": "tsc --noEmit",
    "lint": "echo 'TypeScript files are type-checked with tsc'",
    "lint:fix": "npm run format",
    "format": "prettier --write 'src/**/*.{ts,js}' '*.{ts,js}'",
    "format:check": "prettier --check 'src/**/*.{ts,js}' '*.{ts,js}'",
    "docker:build": "docker build -t telegram-trading-bot .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t telegram-trading-bot:dev .",
    "docker:run": "docker run --env-file .env -p 3000:3000 telegram-trading-bot",
    "docker:run:dev": "docker run --env-file .env -p 3000:3000 -v $(pwd):/app telegram-trading-bot:dev",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose --profile dev up -d tg-bot-dev",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f tg-bot",
    "docker:logs:dev": "docker-compose logs -f tg-bot-dev",
    "docker:clean": "docker system prune -a --volumes"
  },
  "keywords": [
    "chatbot",
    "telegram",
    "ai",
    "trading",
    "hyperliquid",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "axios": "^1.11.0",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "serpapi": "^2.1.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.34.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "babel-jest": "^30.1.1",
    "eslint": "^9.34.0",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
